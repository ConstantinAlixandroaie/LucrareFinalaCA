@page "{qid?}"
@model LucrareFinalaCA.ArticleModel
@{
    ViewData["Title"] = "Article";
}

@if (Model.IsbyId)
{
    <h1>@Model.Article.Title</h1>
    <h2>@Model.Article.Author</h2>
    <img class="img-responsive" src="data:image;base64,@Convert.ToBase64String(@Model.Article.Image)" />
    <div>
        @Model.Article.ArticleText
    </div>
}
else
{
<form method="Post" class="col-sm-12" enctype="multipart/form-data">
    @foreach (var article in Model.Articles)
    {
        <div class="col-xs-3 card spanner zoom">
            <img class="img-responsive" src="data:image;base64,@Convert.ToBase64String(article.Image)" />
            <a href="/Article/@article.Id">
                <span class="linkSpanner"></span>
            </a>
            <a class="text-center" href="/EditArticle/@article.Id">Edit</a>
            <button type="submit" asp-page-handler="delete" asp-route-id="@article.Id">Delete</button>
        </div>
    }
</form>
}