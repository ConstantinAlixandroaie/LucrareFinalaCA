@page
@model LucrareFinalaCA.Pages.AddArticleModel
@{
    ViewData["Title"] = "AddArticle";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="col-md-12">Add Article</h2>


<form method="post" class="col-sm-12">
    <div class="col-sm-12">
        <label >Title</label>
    </div>
    <div class="col-sm-12">
        <input class="col" asp-for="Article.Title" />
    </div>
    <div class="col-sm-12">
        <label >Content</label>
    </div>
    <div class="col-sm-12">
        <textarea cols="60" rows="10" asp-for="Article.ArticleText"></textarea>
    </div>
    <div class="col-sm-12 ">
        <label>Image URL</label>
    </div>
    <div class="col-sm-12">
        <input asp-for="Article.ImgUrl" />
    </div>
    <div class="col-sm-12">
        <label >Categories</label>
    </div>
    <div class="col-sm-12">
        <input id="categories" asp-for="categories" />
    </div>
    <div class="col-sm-12 ">
        <input type="submit" asp-page-handler="Add" value="Add" />
    </div>
</form>


