@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1>Mockipedia</h1>
    <hr />
</div>
<div>
    <form asp-controller="Movies" asp-action="get" method="get">
        <p>
            Title: <input type="text" name="SearchString">
            <input type="submit" value="Search" />
        </p>
    </form>
    <div class="col-xs-12">
        @foreach (var article in Model.Articles)
        {
            <div class="col-xs-5 card shadow">
                <div class="col-xs-12 card-top-section">
                    <div class="col-xs-3">
                        <div class="col-xs-12 zoom spanner">
                            <img class="img-responsive img-minimum" src="data:image;base64,@Convert.ToBase64String(article.Image)" />
                            <a href="/Article/@article.Id">
                                <span class="linkSpanner"></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-8 col-xs-offset-1">
                        <div class="col-xs-12 ">
                            <h1 class="text-responsive"> @article.Title </h1>
                        </div>
                        <div class="col-xs-6  text-responsive">
                            <p class="article-preview">
                                @article.ArticleText
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>