@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="col-xs-12">
    @foreach (var article in Model.Articles)
    {
        <div class="col-xs-3 card spanner zoom">
            <img class="img-responsive" src="data:image;base64,@Convert.ToBase64String(article.Image)"/>
            <a href="/Article/@article.Id">
                <span class="linkSpanner"></span>
            </a>
        </div>
    }
</div>
