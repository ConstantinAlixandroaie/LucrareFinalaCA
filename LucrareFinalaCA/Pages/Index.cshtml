@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1>Mockipedia</h1>
    <hr />
</div>
<div>
    <form asp-controller="Movies" asp-action="get" method="get">
        <p>
            Title: <input type="text" name="SearchString">
            <input type="submit" value="Search" />
        </p>
    </form>
    <div class="col-xs-12">
        @foreach (var article in Model.Articles)
        {
            <div class="col-xs-3 container d-flex justify-content-center">
                <figure class="col-lg-12 card-product-grid">
                    <a href="/Article/@article.Id" class="img-wrap" data-abc="true">
                        <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(article.Image)" />
                    </a>
                    <figcaption class="info-wrap">
                        <div class="row">
                            <div class="col-xs-9"> <a href="/Article/@article.Id" class="title" data-abc="true">@article.Title</a> </div>
                            <div class="col-xs-3">
                                <div class="rating text-right"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </div>
                            </div>
                        </div>
                    </figcaption>
                    <div class="cardbottom">
                        @article.ArticleText
                    </div>
                </figure>
            </div>
        }
    </div>
</div>